@model Class
@{
    Layout = "_Layout";

}
<div class="divforDelete">
    <form class="FormForDelete" asp-controller="Class" asp-action="Delete" method="post">
        <h2>
            Вы уверены, что хотите удалить класс?
        </h2>
        <div class="button_place">
            <button type="submit" class="btn btn-success">Да</button>

            <a class="btn btn-danger" asp-controller="Class" asp-action="Information" asp-route-id="@Model.Id"><div>Нет</div></a>

        </div>
    </form>
</div>