@model Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru" style="width: 100%; height: 100%; padding: 0; margin: 0;">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"] - Авторизация</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/popper/dist/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    </head>
    <body style="width: 100%; height: 100%; padding: 0; margin: 0;">
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card " style="border-radius: 1rem; box-shadow: 0 0 5px; background-color: whitesmoke;">
                            <div class="card-body p-5 text-center">

                                <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="mb-md-5 mt-md-5">

                                    <h2 class="fw-bold mb-5 text-uppercase">Вход</h2>

                                    <div class="form-outline form-white mb-5 text-lg-left">
                                        <input required type="text" asp-for="PhoneNumber" id="_phonenumber" class="form-control form-control-lg" placeholder="Номер телефона:" maxlength="13"/>
                                    </div>

                                    <div class="form-outline form-white mb-5">
                                        <input required type="password" asp-for="Password" id="typePasswordX" class="form-control form-control-lg" placeholder="Пароль:" />
                                    </div>



                                    <button class="btn btn-success px-5" type="submit">Вход</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>
